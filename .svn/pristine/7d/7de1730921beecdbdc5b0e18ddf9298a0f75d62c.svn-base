.container {
    position: absolute;
    top: 0;
    border-top: 0;
    ;
    opacity: 0.9;
    background: #333333;
    width: 100%;
    height: 1000px;
}
.autor {
    width: 800px;
    background: #fff;
    margin: 0 auto;
    margin-top: 100px;
    padding: 50px;
    border: solid 1px #ccc;
    border-radius: 10px;
}
.password {
    width: 320px;
}
.row{
    position: relative;
}
.row2 {
    display: none;
    position: relative;
}
.autor input[type="text"],
input[type="password"] {
    width: 300px;
    height: 30px;
    color: #555;
    border: solid 1px #ccc;
    box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075);
    border-radius: 5px;
    margin: 10px;
    margin-left: 200px;
    padding: 4px 6px;
}
label {
    position: absolute;
    top: 4px;
    display: inline-block;
    margin: 10px;
    width: 200px;
}
#password {
    width: 200px;
}
input[type="submit"] {
    margin-top: 10px;
    color: #fff;
    width: 87px;
    height: 30px;
    line-height: 15px;
    display: inline-block;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    -o-border-radius: 5px;
    border-radius: 5px;
    background:  #62c462;
    background-image: linear-gradient(to bottom, #62c462, #51a351);
    background-repeat: repeat-x repeat-y;
    border-color: rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.1) rgba(0, 0, 0, 0.25);
}
.register a, .active-directory, .register span {
    color: #fff;
    text-decoration: none;
    width: 150px;
    line-height: 30px;
    padding-left: 15px;
    display: inline-block;
    border-radius: 5px;
    margin: 10px;
    background: #39b3d7;
    border: solid 1px #21afd6;
}
#element_to_pop_up {
    background-color: #fff;
    border-radius: 10px 10px 10px 10px;
    box-shadow: 0 0 25px 5px #999;
    color: #111;
    display: none;
    min-width: 600px;
    min-height: 500px;
    padding: 25px;
}
.person {
    font-family: 'Palatino Linotype', 'Book Antiqua', Palatino, serif;
    cursor: pointer;
    margin-bottom: 20px;
}
.person:hover {
    background: #21c1ed;
    color: #fff;
}
.b-close {
    color: #fff;
    display: block;
    position: absolute;
    background: #dd4b39;
    border: 3px solid #dd4b39;
    border-radius: 5px;
    left: 576px;
    top: -20px;
    width: 26px;
    line-height: 25px;
    padding-left: 5px;
    cursor: pointer;
    margin: 10px;
}
#register-submit {
    width: 130px;
    display: none;
}
#personSearch_loader{
    position: relative;
}
    #personSearch_loader div{
        top: 200px;
        left: 250px;
        position: absolute;
    }
.apply{
    cursor: pointer;
    margin-top: 10px;
    color: #fff;
    width: 60px;
    height: 30px;
    line-height: 25px;
    padding-left: 20px;
    text-shadow: 0 -1px 0 rgba(0, 0, 0, 0.25);
    border-radius: 5px;
    background:  #62c462;    
    background-image: linear-gradient(to bottom, #62c462, #51a351);
    background-repeat: repeat-x repeat-y;
    border-color: #62c462 #62c462 #62c462;    
}
.apply:hover{
    color: #fff;
     background-image: linear-gradient(to top, #7cc462, #51a351);
}